{
    "name": "antidot-fw/dev-tools",
    "description": "Anti.Framework console line dev tools",
    "keywords": [
        "psr-11"
    ],
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "kpicaza"
        }
    ],
    "require": {
        "php": "^7.4.0|^8.0",
        "psr/container": "^1.0.0",
        "symfony/console": "^4.2 || ^5.0"
    },
    "require-dev": {
        "phpro/grumphp": "~0.17 || ~1.0",
        "phpstan/phpstan": "^0.11.5 || ^0.12.0 || ^1.0.0",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^4.2 || ^5.0",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\DevTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntidotTest\\DevTools\\": "test"
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@test",
            "@inspect"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "inspect": "phpstan analyse src -l7 --ansi",
        "test": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}
